{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "types": ["node"],
    "lib": ["esnext.asynciterable", "es2017"],
    "typeRoots": ["node_modules/@types"]
  },
  "paths": {
    "@/*": ["lib/*"]
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}
